update_fastlane

default_platform(:ios)

platform :ios do

  lane :setup do
    setup_project
  end
  
  private_lane :setup_project do
    create_keychain(
      name: "action_keychain",
      password: "meow",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )
  end
  
  desc "Archives & generates iPA for Example App"
  lane :build_example_app do

    match(
      readonly: true,
      type: "development", 
      app_identifier: "live.100ms.videoapp",
      git_private_key: ENV["SSH_PRIVATE_KEY"]
    )

    gym(
      scheme: "HMSVideo_Example",
      export_options: {
        method: "development",
        provisioningProfiles: { 
          "live.100ms.videoapp" => "match Development live.100ms.videoapp"
        }
      }
    )
  end

  # desc "Runs Unit Tests"
  # lane :tests do
